  alias dl="yadm-log-graph"
  alias dll="yadm log"
  alias dph="yadm push"
  alias dpl="yadm pull"
  alias dr="yadm remote -vv"
  alias ds="yadm status -sb --ignore-submodules"
  alias dup="yadm-add-modified-commit-push"

fi

